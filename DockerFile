# --- Stage 1: The Build Stage ---
# Use an official Maven image with Java 17 to build the app
FROM maven:3.9-eclipse-temurin-17 AS build

# Set the working directory
WORKDIR /app

# Copy the pom.xml and source code
COPY pom.xml .
COPY src ./src

# Run the Maven build command to create the .jar file
# -DskipTests speeds up the build
RUN mvn clean package -DskipTests

# --- Stage 2: The Runtime Stage ---
# Use a lightweight JRE-only image for the final app
FROM eclipse-temurin:17-jre-jammy

# Set the working directory
WORKDIR /app

# Copy ONLY the built .jar file from the 'build' stage
COPY --from=build /app/target/nexussearch-0.0.1-SNAPSHOT.jar app.jar

# Tell Render what port our app runs on
EXPOSE 8080

# The command to run the application
ENTRYPOINT ["java", "-jar", "app.jar"]